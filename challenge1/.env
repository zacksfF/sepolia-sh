# Sepolia Event Indexer Configuration

# Ethereum RPC endpoint
RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Contract to index events from
CONTRACT_ADDRESS=0x761d53b47334bee6612c0bd1467fb881435375b2

# Event topic to filter (L1InfoRootUpdate signature)
EVENT_TOPIC=0x3e54d0825ed78523037d00a81759237eb436ce774bd546993ee67a1b67b6e766

# Starting block number (0 = scan from beginning)
START_BLOCK=0

# Batch size for log queries (balance between efficiency and RPC limits)
BATCH_SIZE=5000

# Optional: End block (if not set, will sync to latest)
# END_BLOCK=yarayaraaya

# BoltDB file path
DB_PATH=./sepolia.db
